<aside id="sidebar grow">
  <%=game.status%>
  Current turn = <%=game.turn ? "Player 1" : "Player 2" %> <br>
</aside>
<article id="main-game-board" class="grid grid-cols-1 grid-rows-4 basis-5/6 h-full gap-y-10">
  <section id="op-info" class="flex flex-row w-full">
    <section id="op-cards-hand" class="flex flex-row w-full justify-center gap-x-2">
      <%= render partial: "games/party_card", collection:opposing_player.cards.in_hand , cached: true %>
    </section>
    <div class="w-40 h-60 relative text-white border-2 border-black rounded bg-slate-700 text-center">
      In Deck:<%=opposing_player.gamestate_deck.card_count%>
    </div>
  </section>
</section>
<section id="battlefield" class="flex flex-row w-full row-span-2 grid grid-cols-1 grid-rows-2">
  <% if game.status == "mulligan" %>
    <%= render 'games/mulligan', first_person_player: first_person_player, game: game%>
  <% end %>
  <div id="op-cards-battle" class="flex flex-row w-full justify-center gap-x-2">
    <%= render partial: "games/party_card", collection:opposing_player.cards.in_battle , cached: true %>
  </div>
  <div id="fp-cards-battle" class="flex flex-row w-full justify-center gap-x-2">
    <%= render partial: "games/party_card", collection:first_person_player.cards.in_battle , cached: true %>
  </div>
</section>
<section id="fp-info" class="flex flex-row w-full">
  <section id="fp-cards-hand" class="flex flex-row w-full justify-center gap-x-2">
    <%= render partial: "party_card_gamestates/card_in_hand", collection:first_person_player.cards.in_hand, as: :card, locals:{game: game, first_person_player: first_person_player}, cached: true %>
  </section>
  <section id="fp-deck" class="flex flex-row gap-x-3">
    <div class="min-w-max">Gold: <%=first_person_player.cost_current%> / <%=first_person_player.cost_cap%></div>
    <div class="w-40 h-60 relative text-white border-2 border-black rounded bg-slate-700 text-center">
      In Deck:<%=first_person_player.gamestate_deck.card_count%>
    </div>
  </section>
</section>
</article>
