<article>
  <h1 class="font-bold text-4xl"><%=@account_deck.name%></h1>
  <p><%=@account_deck.race.name%></p>
  <p><%=@account_deck.archetype.name%></p>
  <%=@account_deck.card_count%>/30 Cards <br>
  <%@account_deck.party_card_parents.each do |card|%>
    <%=card.name%>: COST: <%=card.cost_default%>, ATK <%=card.attack_default%> HEALTH: <%=card.health_default%> TRIBE: <%=card.tribe%> <br>
  <% end %>
</article>
<section>
  <nav id="card-book-naviation">
    <%= link_to  "Neutral Cards", '#' %>
    <%= link_to "#{@account_deck.archetype.name} Cards", '#' %>
  </nav>
  <div>
    <%@neutral_cards.each do |neutral_card|%>
      <div class="w-40 h-60 bg-amber-600 bg-[url('https://image.shutterstock.com/image-vector/angry-cartoon-gnome-vector-clip-600w-1137956945.jpg')] bg-contain relative text-white border-2 border-black rounded">
        <div class="border-2 border-amber-600 bg-amber-500 rounded-full h-10 w-10 text-3xl text-center text-white absolute -top-2 -left-2 z-10">
          <%=neutral_card.cost_default%>
        </div>
        <div class="text-center text-xl absolute bottom-12 inset-x-0 inset-x-0 border-2 rounded border-slate-900 bg-slate-700">
          <%=neutral_card.name%>
        </div>
        <div class="border-2 border-red-600 bg-red-500 rounded-full h-10 w-10 text-3xl text-center mt-1 pb-1 text-white absolute -bottom-2 -left-2 z-10">
          <%=neutral_card.attack_default%>
        </div>
        <div class="border-2 border-lime-600 bg-lime-500 rounded-full h-10 w-10 text-3xl text-center mt-1 pb-1 text-white absolute -bottom-2 -right-2 z-10">
          <%=neutral_card.health_default%>
        </div>
        <div class="text-center text-md absolute bottom-2 inset-x-0 border-2 rounded border-slate-900 bg-slate-700">
          <%=neutral_card.tribe%>
        </div>
      </div>
    <% end %>
    <%@archetype_cards.each do |archetype_card|%>
      <%=archetype_card.name%>
    <% end %>
  </div>
</div>
</section>
