<div class="w-40 h-60 relative text-white border-2 border-black rounded z-50">
  <div class="border-2 border-amber-600 bg-amber-500 rounded-full h-10 w-10 text-3xl text-center text-white absolute -top-2 -left-2 z-10">
    <%=party_card_parent.cost_default%>
  </div>
  <div class="text-right text-md absolute top-0 inset-x-0 inset-x-0 border-2 rounded border-slate-900 bg-<%=party_card_parent.archetype.color%>-700">
    <%=party_card_parent.name%>
  </div>
  <div class="border-2 border-red-600 bg-red-500 rounded-full h-10 w-10 text-3xl text-center mt-1 pb-1 text-white absolute -bottom-2 -left-2 z-10">
    <%=party_card_parent.attack_default%>
  </div>
  <div class="border-2 border-lime-600 bg-lime-500 rounded-full h-10 w-10 text-3xl text-center mt-1 pb-1 text-white absolute -bottom-2 -right-2 z-10">
    <%=party_card_parent.health_default%>
  </div>
  <div class="text-center text-xs absolute bottom-2 inset-x-0 border-2 rounded border-slate-900 bg-<%=party_card_parent.archetype.color%>-700 h-24">
    <%party_card_parent.keywords.each do |k|%>
      <p><strong><%=k.class%></strong>: <%=k.body_text%></p>
    <% end %>
  </div>
  <div class="text-center text-xs absolute bottom-0 inset-x-0 bg-<%=party_card_parent.archetype.color%>-700  h-4">
    <%=party_card_parent.tribe%>
  </div>
  <%=image_tag('cardplaceholder.webp', class:"w-max h-max")%>
</div>
