<%= content_tag :div,
                id: local_assigns[:id],
                data: (card.decorate.method(local_assigns[:decorator_data_method]).call if local_assigns[:decorator_data_method]),
                class: 'w-36 h-52 rounded-full mx-2.5 relative text-white border-2 border-black card-on-board min-w-36 has-tooltip ' + local_assigns[:class],
                draggable: false do %>
  <div id="attack" class="border-2 border-red-600 bg-red-500 rounded-full h-12 w-12 text-4xl text-center mt-1 pb-1 text-white absolute bottom-0 -left-2 z-10 select-none pointer-events-none">
    <%=card.attack_current%>
  </div>
  <div id="health" class="health-current border-2 border-lime-600 bg-lime-500 rounded-full h-12 w-12 text-4xl text-center mt-1 pb-1 absolute bottom-0 -right-2 z-10 select-none pointer-events-none">
    <%=card.health_current%>
  </div>
  <div class="overflow-hidden w-full h-full rounded-full select-none pointer-events-none">
    <%=image_tag('cardplaceholder.webp', class:"object-contain w-40 h-auto select-none pointer-events-none", draggable:"false")%>
  </div>
  <%=render(partial: 'party_card_gamestates/full_card',
         locals: { class: 'tooltip top-0 -left-44 z-50 shadow-2xl shadow-cyan-200',
                   card: card },
         cached: true ) %>
<% end %>
<%= content_tag :div,
                '',
                class: ("opacity-50 rounded-full board-space" if local_assigns[:first_person_pov]),
                data: card.decorate.board_space_data(local_assigns[:first_person_pov] || false) %>
