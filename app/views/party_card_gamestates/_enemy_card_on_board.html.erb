<div class="w-40 h-60 enemy-card z-30 mx-2.5 relative text-white border-2 border-black rounded card-on-board min-w-max" 
  draggable="false"
  data-drag-battle-target="enemyMinion"
  data-style-cards-target="boardMinion"
  data-id="<%=card.id%>"
  data-status="<%=card.status%>"
  data-health-current="<%=card.health_current%>"
  data-health-cap="<%=card.health_cap%>"
  data-action="drop->drag-battle#drop dragenter->drag-battle#dragEnter dragover->drag-battle#dragOver dragleave->drag-battle#dragLeave dragend->drag-battle#dragEnd">
  <div class="border-2 border-amber-600 bg-amber-500 rounded-full h-10 w-10 text-3xl text-center text-white absolute -top-2 -left-2 z-10 select-none pointer-events-none">
    <%=card.cost_current%>
  </div>
  <div class="text-center text-xl absolute bottom-12 inset-x-0 inset-x-0 border-2 rounded border-slate-900 bg-slate-700 select-none pointer-events-none">
    <%=card.parent.name%>
  </div>
  <div class="border-2 border-red-600 bg-red-500 rounded-full h-10 w-10 text-3xl text-center mt-1 pb-1 text-white absolute -bottom-2 -left-2 z-10 select-none pointer-events-none">
    <%=card.attack_current%>
  </div>
  <div class="health-current border-2 border-lime-600 bg-lime-500 rounded-full h-10 w-10 text-3xl text-center mt-1 pb-1 absolute -bottom-2 -right-2 z-10 select-none pointer-events-none">
    <%=card.health_current%>
  </div>
  <div class="text-center text-xs absolute bottom-8 inset-x-0 border-2 rounded border-slate-900 bg-slate-700 select-none pointer-events-none">
    <%=card.archetype.name%>
  </div>
  <div class="text-center text-md absolute bottom-2 inset-x-0 border-2 rounded border-slate-900 bg-slate-700 select-none pointer-events-none">
    <%=card.parent.tribe%>
  </div>
  <%=image_tag('cardplaceholder.webp', class:"w-40 h-max select-none pointer-events-none", draggable:"false")%>
</div>
